= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :theme
    %br/
    = f.text_field :theme
  .field
    = f.label :date
    %br/
    = f.datetime_select :date
  .field
    = f.label :host
    %br/
    = f.text_field :host
  .field
    = f.label :location
    %br/
    = f.text_area :location
  .field
    = f.label :image
    %br/
    = f.text_field :image
  .actions
    = f.submit
